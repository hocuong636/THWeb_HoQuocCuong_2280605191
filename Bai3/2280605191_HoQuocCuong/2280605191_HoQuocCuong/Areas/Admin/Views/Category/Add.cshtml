@model _2280605191_HoQuocCuong.Models.Category

@{
    ViewData["Title"] = "Thêm phân loại mới";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm phân loại mới</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên phân loại</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-secondary">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
@model _2280605191_HoQuocCuong.Models.Category

@{
    ViewData["Title"] = "Chi tiết phân loại";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết phân loại</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tên phân loại:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
    </dl>
</div>

<div class="mt-4">
    <h3>Danh sách sản phẩm trong phân loại này</h3>
    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price</td>
                        <td>
                            <a asp-controller="Product" asp-action="Display" asp-route-id="@product.Id" class="btn btn-info">Chi tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Không có sản phẩm nào trong phân loại này.</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-secondary">Sửa</a>
    <a asp-action="Index" class="btn btn-primary">Trở về</a>
</div> 
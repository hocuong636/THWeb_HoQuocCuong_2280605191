@model IEnumerable<_2280605191_HoQuocCuong.Models.Order>
@{
	ViewData["Title"] = "Quản lý đơn hàng";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Quản lý đơn hàng</h2>
<table class="table">
	<thead> 
		<tr>
			<th>Mã đơn hàng</th>
			<th>Khách hàng</th>
			<th>Ngày đặt</th>
			<th>Tổng tiền</th>
			<th>Trạng thái</th>
			<th>Thao tác</th> 
		</tr> 
	</thead> 
	<tbody> 
		@foreach (var order in Model) 
		{ 
			<tr>
				<td>@order.Id</td>
				<td>@order.CustomerName</td>
				<td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
				<td>@order.TotalAmount.ToString("N0") VNĐ</td>
				<td>@order.Status</td>
				<td>
					<a asp-area="Admin" asp-controller="Order" asp-action="Display" asp-route-id="@order.Id" class="btn btn-info">Chi tiết</a>
					<a asp-area="Admin" asp-controller="Order" asp-action="UpdateStatus" asp-route-id="@order.Id" class="btn btn-warning">Cập nhật trạng thái</a>
				</td> 
			</tr> 
		} 
	</tbody> 
</table>
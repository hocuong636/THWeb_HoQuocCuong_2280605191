@model _2280605191_HoQuocCuong.Models.Product
<h2>Chi Tiết Sản Phẩm</h2>
<h3 class="mb-3">@Model.Name</h3>
<div class="row">
	<hr class="border border-secondary border-1 opacity-75" />
	<div class="col-md-5">
		@if (!string.IsNullOrEmpty(Model.ImageUrl))
		{
			<img src="@Model.ImageUrl" alt="Product Image" style="max-width: auto;" />
		}
	</div>
	<div class="col-md-7">
		<div class="mt-3">
			<h4>Giá: @Model.Price</h4>
			<div class="mt-3">
				<p>Mô tả:  @Model.Description</p>
				<p>Phân loại: @Model.Category?.Name</p>
			</div>
		</div>
	</div>
</div>
<div>
	<a asp-action="Update" class="btn1  btn btn-secondary" asp-route-id="@Model.Id">Cập nhật</a>
	<a asp-action="Index" class="btn1 btn btn-primary">Trở về</a>
</div>

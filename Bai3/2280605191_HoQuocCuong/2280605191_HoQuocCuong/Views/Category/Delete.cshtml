@model _2280605191_HoQuocCuong.Models.Category

@{
    ViewData["Title"] = "Xóa phân loại";
}

<h2>Xóa phân loại</h2>
<h3>Bạn có chắc chắn muốn xóa phân loại này?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Tên phân loại:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Số lượng sản phẩm:</dt>
        <dd class="col-sm-10">@(Model.Products?.Count ?? 0)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </form>
</div> 